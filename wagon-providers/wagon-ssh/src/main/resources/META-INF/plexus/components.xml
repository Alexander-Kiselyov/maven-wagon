      <role>org.apache.maven.wagon.providers.ssh.SshCommandExecutor</role>
      <implementation>org.apache.maven.wagon.providers.ssh.ScpWagon</implementation>
      <instantiation-strategy>per-lookup</instantiation-strategy>
    </component>
